       </mrow>
      </mtd>
      <mtd columnalign="center">
       <mo>=</mo>
      </mtd>
      <mtd columnalign="left">
       <mrow>
        <mstyle displaystyle="false">
         <mfrac>
          <mn>1</mn>
          <mrow>
           <mi>n</mi>
           <mo stretchy="false">{</mo>
           <mi>X</mi>
           <mo stretchy="false">(</mo>
           <mi>T</mi>
           <mo stretchy="false">)</mo>
           <mspace width=".25em"/>
           <mo>⁎</mo>
           <mspace width=".25em"/>
           <mi>Y</mi>
           <mo stretchy="false">(</mo>
           <mi>T</mi>
           <mo stretchy="false">)</mo>
           <mo stretchy="false">}</mo>
          </mrow>
         </mfrac>
        </mstyle>
        <mspace width=".1em"/>
        <munderover>
         <mo>∑</mo>
         <mrow>
          <mi>i</mi>
          <mo>=</mo>
          <mn>1</mn>
         </mrow>
         <mi>n</mi>
        </munderover>
        <mspace width=".1em"/>
        <mi>n</mi>
        <mrow>
         <mo stretchy="true">(</mo>
         <mrow>
          <msub>
           <mrow>
            <mi mathvariant="italic">Φ</mi>
           </mrow>
           <mrow>
            <mi>i</mi>
           </mrow>
          </msub>
         </mrow>
         <mo stretchy="true">)</mo>
        </mrow>
        <mspace width=".1em"/>
        <munder>
         <mo>∑</mo>
         <mrow>
          <mo stretchy="true">{</mo>
          <mrow>
           <mi>X</mi>
           <mrow>
            <mo stretchy="true">(</mo>
            <mi>T</mi>
            <mo stretchy="true">)</mo>
           </mrow>
           <mo>,</mo>
           <mi>Y</mi>
           <mrow>
            <mo stretchy="true">(</mo>
            <mi>T</mi>
            <mo stretchy="true">)</mo>
           </mrow>
          </mrow>
          <mo stretchy="true">}</mo>
         </mrow>
        </munder>
        <mspace width=".1em"/>
        <mstyle displaystyle="false">
         <mfrac>
          <mrow>
           <msup>
            <mrow>
             <mo stretchy="false">(</mo>
             <msub>
              <mrow>
               <mi>I</mi>
              </mrow>

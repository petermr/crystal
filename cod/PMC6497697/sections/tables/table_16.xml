    <td align="left">Atoms</td>
    <td align="left">
     <inline-formula id="IEq36">
      <alternatives>
       <tex-math id="M97">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$\frac {1}{3}n^{3} + \frac {3}{2}n^{2} + \frac {13}{6}n + 1,~n\ge 1$\end{document}</tex-math>
       <math id="M98">
        <mfrac>
         <mrow>
          <mn>1</mn>
         </mrow>
         <mrow>
          <mn>3</mn>
         </mrow>
        </mfrac>
        <msup>
         <mrow>
          <mi>n</mi>
         </mrow>
         <mrow>
          <mn>3</mn>
         </mrow>
        </msup>
        <mo>+</mo>
        <mfrac>
         <mrow>
          <mn>3</mn>
         </mrow>
         <mrow>
          <mn>2</mn>
         </mrow>
        </mfrac>
        <msup>
         <mrow>
          <mi>n</mi>
         </mrow>
         <mrow>
          <mn>2</mn>
         </mrow>
        </msup>
        <mo>+</mo>
        <mfrac>
         <mrow>
          <mn>13</mn>
         </mrow>
         <mrow>
          <mn>6</mn>
         </mrow>
        </mfrac>
        <mi>n</mi>
        <mo>+</mo>
        <mn>1</mn>
        <mo>,</mo>
        <mspace width="1em"/>
        <mi>n</mi>
        <mo>≥</mo>
        <mn>1</mn>
       </math>
       <inline-graphic xlink:href="11671_2019_2939_Article_IEq36.gif" xmlns:xlink="http://www.w3.org/1999/xlink"/>
      </alternatives>
     </inline-formula>
    </td>
   </tr>

  <math id="mm7">
   <mrow>
    <mrow>
     <mi>x</mi>
     <mrow>
      <mo>(</mo>
      <mi>t</mi>
      <mo>)</mo>
     </mrow>
     <mo>=</mo>
     <mi>sin</mi>
     <mrow>
      <mo>[</mo>
      <mrow>
       <mfrac>
        <mrow>
         <mn>2</mn>
         <mi>π</mi>
         <msub>
          <mi>f</mi>
          <mn>1</mn>
         </msub>
        </mrow>
        <mrow>
         <mi>ln</mi>
         <mfrac>
          <mrow>
           <msub>
            <mi>f</mi>
            <mn>2</mn>
           </msub>
          </mrow>
          <mrow>
           <msub>
            <mi>f</mi>
            <mn>1</mn>
           </msub>
          </mrow>
         </mfrac>
        </mrow>
       </mfrac>
       <mo>·</mo>
       <mrow>
        <mo>(</mo>
        <mrow>
         <msup>
          <mi>e</mi>
          <mrow>
           <mfrac>
            <mi>t</mi>
            <mi>T</mi>
           </mfrac>
           <mi>ln</mi>
           <mfrac>
            <mrow>
             <msub>
              <mi>f</mi>
              <mn>2</mn>
             </msub>
            </mrow>
            <mrow>
             <msub>
              <mi>f</mi>
              <mn>1</mn>
             </msub>
            </mrow>
           </mfrac>
          </mrow>
         </msup>
         <mo>−</mo>
         <mn>1</mn>
        </mrow>
        <mo>)</mo>
       </mrow>
      </mrow>
      <mo>]</mo>
     </mrow>

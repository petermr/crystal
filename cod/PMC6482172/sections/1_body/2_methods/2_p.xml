      <mi>r</mi>
     </mrow>
     <mn>5</mn>
    </msup>
    <mo stretchy="false">(</mo>
    <mn>1.2</mn>
    <mover>
     <mi>A</mi>
     <mo>∘</mo>
    </mover>
    <mo>&lt;</mo>
    <mi>r</mi>
    <mo>≤</mo>
    <mn>2.1</mn>
    <mover>
     <mi>A</mi>
     <mo>∘</mo>
    </mover>
    <mo stretchy="false">)</mo>
   </math>

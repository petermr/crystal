          <mrow>
           <mi>R</mi>
          </mrow>
          <mrow>
           <mi>i</mi>
           <mi>j</mi>
           <mo>,</mo>
           <mi mathvariant="bold">g</mi>
          </mrow>
          <mrow>
           <mn>6</mn>
          </mrow>
         </msubsup>
        </mrow>
       </mfrac>
      </mrow>
     </mrow>
    </mrow>
   </mrow>
  </math>
 </disp-formula>
</p>

   <tex-math id="M27">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$$\tau _c = \mu _0V[\chi _{ab}(H_b^2 - H_a^2) + (\chi _{aa} - \chi _{bb})H_aH_b]$$\end{document}</tex-math>

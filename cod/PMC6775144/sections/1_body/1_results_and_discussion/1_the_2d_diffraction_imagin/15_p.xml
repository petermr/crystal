               <mo>,</mo>
               <mi>o</mi>
               <mi>b</mi>
               <mi>s</mi>
              </mrow>
             </msub>
             <mrow>
              <mo stretchy="true">[</mo>
              <mrow>
               <mi>X</mi>
               <mrow>
                <mo stretchy="true">(</mo>
                <mi>T</mi>
                <mo stretchy="true">)</mo>
               </mrow>
               <mo>,</mo>
               <mi>Y</mi>
               <mrow>
                <mo stretchy="true">(</mo>
                <mi>T</mi>
                <mo stretchy="true">)</mo>
               </mrow>
               <mo>;</mo>
               <msub>
                <mrow>
                 <mi mathvariant="italic">Φ</mi>
                </mrow>
                <mrow>
                 <mi>i</mi>
                </mrow>
               </msub>
              </mrow>
              <mo stretchy="true">]</mo>
             </mrow>
             <mspace width=".25em"/>
             <mo>−</mo>
             <msub>
              <mrow>
               <mi>I</mi>
              </mrow>
              <mrow>
               <mi>h</mi>
               <mo>,</mo>
               <mi>c</mi>
               <mi>a</mi>
               <mi>l</mi>
               <mi>c</mi>
              </mrow>
             </msub>
             <mrow>
              <mo stretchy="true">[</mo>
              <mrow>
               <mi>X</mi>
               <mrow>
                <mo stretchy="true">(</mo>
                <mi>T</mi>
                <mo stretchy="true">)</mo>
               </mrow>
               <mo>,</mo>
               <mi>Y</mi>
               <mrow>
                <mo stretchy="true">(</mo>
                <mi>T</mi>
                <mo stretchy="true">)</mo>
               </mrow>
               <mo>;</mo>
               <msub>
                <mrow>
                 <mi mathvariant="italic">Φ</mi>
                </mrow>
                <mrow>
                 <mi>i</mi>
                </mrow>
               </msub>
              </mrow>
              <mo stretchy="true">]</mo>
             </mrow>
             <mo stretchy="false">)</mo>
            </mrow>
            <mn>2</mn>
           </msup>
          </mrow>
          <mrow>
           <msub>
            <mrow>
             <mi>I</mi>
            </mrow>
            <mrow>
             <mi>h</mi>
             <mo>,</mo>
             <mi>o</mi>

           </msubsup>
           <mo stretchy="false">(</mo>
           <mi>t</mi>
           <mo stretchy="false">)</mo>
           <mi>N</mi>
           <mi>sin</mi>
           <mi>N</mi>
           <mi>θ</mi>
          </mrow>
          <mo>]</mo>
         </mrow>
        </mrow>

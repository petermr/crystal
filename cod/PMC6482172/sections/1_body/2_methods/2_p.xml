     </mrow>
    </msub>
    <msup>
     <mrow>
      <mi>r</mi>
     </mrow>
     <mn>2</mn>
    </msup>
    <mo>+</mo>
    <msub>
     <mrow>
      <mi>b</mi>
     </mrow>
     <mrow>
      <mn>3</mn>
     </mrow>
    </msub>
    <msup>
     <mrow>
      <mi>r</mi>
     </mrow>
     <mn>3</mn>
    </msup>
    <mo>+</mo>
    <msub>
     <mrow>
      <mi>b</mi>
     </mrow>
     <mrow>
      <mn>4</mn>
     </mrow>
    </msub>
    <msup>
     <mrow>
      <mi>r</mi>
     </mrow>
     <mn>4</mn>
    </msup>
    <mo>+</mo>

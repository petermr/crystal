             <mi>s</mi>
            </mrow>
           </msub>
           <msup>
            <mrow>
             <mo stretchy="true">[</mo>
             <mrow>
              <mi>X</mi>
              <mrow>
               <mo stretchy="true">(</mo>
               <mi>T</mi>
               <mo stretchy="true">)</mo>
              </mrow>
              <mo>,</mo>
              <mi>Y</mi>
              <mrow>
               <mo stretchy="true">(</mo>
               <mi>T</mi>
               <mo stretchy="true">)</mo>
              </mrow>
              <mo>;</mo>
              <msub>
               <mrow>
                <mi mathvariant="italic">Φ</mi>
               </mrow>
               <mrow>
                <mi>i</mi>
               </mrow>
              </msub>
             </mrow>
             <mo stretchy="true">]</mo>
            </mrow>
            <mn>2</mn>
           </msup>
          </mrow>
         </mfrac>
        </mstyle>
        <mo>=</mo>
        <mi>M</mi>
        <mi>i</mi>
        <mi>n</mi>
        <mo>,</mo>
       </mrow>
      </mtd>
     </mtr>
     <mtr columnalign="left">
      <mtd columnalign="right">
       <mrow>
        <mi>n</mi>
        <mrow>
         <mo stretchy="true">(</mo>
         <mrow>
          <msub>
           <mrow>
            <mi mathvariant="italic">Φ</mi>
           </mrow>
           <mrow>
            <mi>i</mi>
           </mrow>
          </msub>
         </mrow>
         <mo stretchy="true">)</mo>
        </mrow>
       </mrow>
      </mtd>
      <mtd columnalign="center">
       <mo>=</mo>
      </mtd>
      <mtd columnalign="left">
       <mrow>
        <mn>1</mn>
        <mo>,</mo>
        <mi>i</mi>
        <mo>=</mo>
        <mn>1</mn>
        <mo>,</mo>
        <mi>…</mi>
        <mi>n</mi>
        <mo>,</mo>
       </mrow>
      </mtd>
     </mtr>
    </mtable>
   </math>

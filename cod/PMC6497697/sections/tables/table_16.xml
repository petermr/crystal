     <inline-formula id="IEq37">
      <alternatives>
       <tex-math id="M99">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$\frac {2}{3}n^{3} + 2n^{2} + \frac {4}{3}n,~n\ge 1$\end{document}</tex-math>
       <math id="M100">
        <mfrac>
         <mrow>
          <mn>2</mn>
         </mrow>
         <mrow>

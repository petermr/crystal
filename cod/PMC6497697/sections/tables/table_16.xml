         <mrow>
          <mn>3</mn>
         </mrow>
        </mfrac>
        <mi>n</mi>
        <mo>,</mo>
        <mspace width="1em"/>
        <mi>n</mi>
        <mo>≥</mo>
        <mn>1</mn>
       </math>
       <inline-graphic xlink:href="11671_2019_2939_Article_IEq37.gif" xmlns:xlink="http://www.w3.org/1999/xlink"/>
